
<div class='col-md-4'>
  <form class="navbar-form navbar-left" role="search">
    <div class="form-group">
      {{input label="Search" class='form-control' value=searchTerm }}
    </div>
  </form>
</div>
<div class='col-md-9'>
  <div class='panel panel-default'>
    <div class="panel-heading">
      <h3 class="panel-title">Search Results</h3>
    </div>
    <div class="panel-body">
      {{#if model.length}}
        <ul class='list-group'>
          {{#each model as |searchResult|}}
            <li class='list-group-item'> {{ searchResult.title }} </li>
          {{/each}}
        </ul>
      {{else}}
        <p class='alert alert-info'>No results found.</p>
      {{/if}}
    </div>
  </div>
</div>
